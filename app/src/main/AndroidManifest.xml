<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ipp.estg.cmu_tp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cmu_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cmu_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserActivity" android:screenOrientation="portrait" />
        <activity android:name=".SignUpActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>